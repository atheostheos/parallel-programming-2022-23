{
    "tasks": [
        {
            "type":"shell",
            "label": "Create directory for binary file",
            "command": "mkdir",
            "args": [
                "-p",
                "${workspaceFolder}/output/${relativeFileDirname}"
            ]
        },
        {
            "type": "shell",
            "label": "Mpicc build active file",
            "command": "/usr/bin/mpic++",
            "args": [
              "-g",
              "${file}",
              "-o",
              "${workspaceFolder}/output/${relativeFileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
              "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "detail": "MPI supported compilation task",
            "dependsOn": ["Create directory for binary file"]
        }
    ],
    "version": "2.0.0"
}